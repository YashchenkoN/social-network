<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <typeAliases>
        <typeAlias alias="User" type="ua.social.network.dto.UserDto"/>
        <typeAlias alias="Post" type="ua.social.network.dto.PostDto"/>
        <typeAlias alias="FriendRequest" type="ua.social.network.dto.FriendRequestDto"/>
    </typeAliases>

    <mappers>
        <mapper resource="mapper/users-mapper.xml"/>
        <mapper resource="mapper/posts-mapper.xml"/>
        <mapper resource="mapper/friend-requests-mapper.xml"/>
    </mappers>

</configuration>